{
  "name": "cursor-learning-overlay",
  "displayName": "Cursor Learning Overlay",
  "description": "Transform idle time during AI agent execution into productive microlearning",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0",
    "cursor": "^1.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cursor-learning-overlay.showFunFact",
        "title": "Show Fun Fact",
        "category": "Learning"
      },
      {
        "command": "cursor-learning-overlay.settings",
        "title": "Open Settings",
        "category": "Learning"
      }
    ],
    "keybindings": [
      {
        "command": "cursor-learning-overlay.showFunFact",
        "key": "ctrl+alt+f",
        "mac": "cmd+alt+f",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Cursor Learning Overlay",
      "properties": {
        "cursorLearningOverlay.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable the learning overlay"
        },
        "cursorLearningOverlay.showButton": {
          "type": "boolean",
          "default": true,
          "description": "Show the Fun Fact button in the status bar"
        },
        "cursorLearningOverlay.topics": {
          "type": "array",
          "default": [
            "JavaScript",
            "TypeScript",
            "React",
            "Node.js",
            "AI/ML"
          ],
          "description": "Topics for learning content"
        },
        "cursorLearningOverlay.ollamaUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama API URL"
        },
        "cursorLearningOverlay.model": {
          "type": "string",
          "default": "wizardlm2:latest",
          "description": "Ollama model to use for content generation"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^3.6.1",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
